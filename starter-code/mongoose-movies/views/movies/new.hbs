<h2>New Movie</h2>
{{#if error}}
<p><strong>Error:</strong> {{error}}</p>
{{/if}}
<form action="/movies" method="POST">
  <label for="title">Title:</label><input type="text" name="title" id="title" required>
  <label for="genre">Genre:</label><input type="text" name="genre" id="genre" required>
  <label for="plot">Plot:</label><input type="text" name="plot" id="plot">
  <button type="submit">Create</button>
</form>
<a href="/movies">Back</a>